require "socket"
addr=ARGV[0].split(":")
if addr.length==1
	puts "tcp: Address must be in format host:port"
	exit
end
begin
	$connection=TCPSocket.new(addr[0],addr[1])
rescue => e
	puts e
else
	puts "Connected"
end
while true
	if data=$connection.gets
		puts data
	else
		$connection.puts gets.chomp!
end
end